# Metabolic-Tracker Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED IN PRODUCTION
# =============================================================================

# Database connection string (PostgreSQL)
# Format: postgresql://user:password@host:port/database?ssl=true
DATABASE_URL=

# Session secret for cookie signing (min 32 characters, use random string)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=

# =============================================================================
# REQUIRED FOR PHI ENCRYPTION (HIPAA Compliance)
# =============================================================================

# PHI (Protected Health Information) encryption key
# Must be exactly 64 hex characters (32 bytes for AES-256)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# WARNING: Losing this key means losing access to all encrypted health data!
PHI_ENCRYPTION_KEY=

# =============================================================================
# OPTIONAL - AI FEATURES
# =============================================================================

# OpenAI API key for food analysis features
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Alternative: Replit AI integration key
AI_INTEGRATIONS_OPENAI_API_KEY=
AI_INTEGRATIONS_OPENAI_BASE_URL=

# =============================================================================
# OPTIONAL - SERVER CONFIGURATION
# =============================================================================

# Server port (default: 5000)
PORT=5000

# Node environment (development | production)
NODE_ENV=development

# =============================================================================
# ERROR MONITORING (Sentry)
# =============================================================================

# Server-side Sentry DSN
# Get from: https://sentry.io/settings/[org]/projects/[project]/keys/
SENTRY_DSN=

# Client-side Sentry DSN (for Vite frontend)
VITE_SENTRY_DSN=

# Sentry dashboard URL (for alert links)
SENTRY_DASHBOARD_URL=

# Application version (for release tracking)
VITE_APP_VERSION=1.0.0

# Enable client-side error tracking in development (default: false)
VITE_ENABLE_ERROR_TRACKING=false

# =============================================================================
# ALERTING
# =============================================================================

# Slack webhook URL for alerts
# Get from: https://api.slack.com/messaging/webhooks
SLACK_WEBHOOK_URL=

# Email recipients for alerts (comma-separated)
ALERT_EMAIL_RECIPIENTS=

# SMS phone numbers for critical alerts (comma-separated, E.164 format)
ALERT_SMS_NUMBERS=

# Custom webhook URL for alerts (optional)
ALERT_WEBHOOK_URL=

# =============================================================================
# TWILIO (for SMS alerts - optional)
# =============================================================================

# Twilio account credentials
# Get from: https://console.twilio.com/
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# =============================================================================
# EMAIL SERVICE (for email alerts - optional)
# =============================================================================

# SendGrid API key
# Get from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=

# =============================================================================
# BACKUP & DISASTER RECOVERY
# =============================================================================

# Directory for storing manual backups (default: ./backups)
BACKUP_DIR=./backups

# =============================================================================
# DEVELOPMENT ONLY
# =============================================================================

# Replit ID (used as fallback session secret in development)
# REPL_ID=
